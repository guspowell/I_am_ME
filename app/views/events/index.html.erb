<% if @events%>
  <ul style='margin-top:10em;'>  </ul>
    <%@events.each do |event|%>

    <section class="display-results">
      <section class="widget-container">
    
            <div class="widget-page" style="background-image:url(<%= event.image.url(:medium) %>);">
              <div id='map-canvas'></div>
              <a><%= image_tag("more_info.png", :class => 'more') %></a>
              <a><%= image_tag("play_button.png", :class => 'play') %></a>

              <div id="name-and-location">
                <h1 class='title'>   <%= event.name %></h1>
                <h2 class='location'><%= event.location %></h2>
              </div>

              <div class="description"><p><%= event.description %></p></div>

              <section id='bottom-section'>
                <p class='large-icons'><%= image_tag("map.svg", :id => 'map', :class => 'map') %></p>
                <p class='large-icons'><%= image_tag("price_tag.svg", :id => 'price') %>         </p>
                <p class='large-icons'><%= image_tag("share.svg", :id => 'share') %>             </p>
                <p class='large-icons'><%= link_to image_tag("edit.png", :id => 'edit'), edit_user_event_path(current_user, event) %>  </p>
                <%= link_to image_tag("ME.jpg", :class => 'me'), user_calendar_path(current_user, current_user.calendars.me, event: event.id), :method => :patch  %>
              </section>
            </div>
        </section>
      </section>
  <%end%>
  </ul>
<%end%>
